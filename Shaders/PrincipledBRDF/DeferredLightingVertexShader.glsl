#version 460 core

//////////////////////////////////////////////////////////
// Inputs
//////////////////////////////////////////////////////////

layout (location = 0) in vec3 InputPosition;
layout (location = 1) in vec2 InputTextureCoords;

//////////////////////////////////////////////////////////
// Outputs
//////////////////////////////////////////////////////////

layout (location = 0) out vec2 OutputTextureCoords;

//////////////////////////////////////////////////////////
// Entry Point
//////////////////////////////////////////////////////////

void main()
{
	float NDCX = (2.0 * InputPosition.x) - 1.0;
	float NDCY = (2.0 * InputPosition.y) - 1.0;

	OutputTextureCoords = InputTextureCoords;

	gl_Position = vec4(NDCX, NDCY, 0.0, 1.0);
}