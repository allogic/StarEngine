#version 460 core

//////////////////////////////////////////////////////////
// Inputs
//////////////////////////////////////////////////////////

layout (location = 0) in vec3 InputPosition;
layout (location = 1) in uint InputColor;

//////////////////////////////////////////////////////////
// Outputs
//////////////////////////////////////////////////////////

layout(location = 0) flat out uint OutputColor;

//////////////////////////////////////////////////////////
// Uniforms
//////////////////////////////////////////////////////////

uniform mat4 Projection;
uniform mat4 View;

//////////////////////////////////////////////////////////
// Entry Point
//////////////////////////////////////////////////////////

void main()
{
	OutputColor = InputColor;

	gl_Position = Projection * View * vec4(InputPosition, 1.0);
}