#version 460 core

//////////////////////////////////////////////////////////
// Inputs
//////////////////////////////////////////////////////////

layout(location = 0) flat in uint InputColor;

//////////////////////////////////////////////////////////
// Outputs
//////////////////////////////////////////////////////////

layout(location = 0) out vec4 OutputColor;

//////////////////////////////////////////////////////////
// Entry Point
//////////////////////////////////////////////////////////

void main()
{
	float R = float((InputColor >> 24) & 0xFF) / 255;
	float G = float((InputColor >> 16) & 0xFF) / 255;
	float B = float((InputColor >>  8) & 0xFF) / 255;
	float A = float((InputColor >>  0) & 0xFF) / 255;

	OutputColor = vec4(R, G, B, A);
}