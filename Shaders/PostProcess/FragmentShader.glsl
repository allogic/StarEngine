#version 460 core

//////////////////////////////////////////////////////////
// Samplers
//////////////////////////////////////////////////////////

layout(binding = 0) uniform sampler2D ColorTextureSampler;

//////////////////////////////////////////////////////////
// Inputs
//////////////////////////////////////////////////////////

layout(location = 0) in vec2 InputTextureCoords;

//////////////////////////////////////////////////////////
// Outputs
//////////////////////////////////////////////////////////

layout(location = 0) out vec4 OutputColor;

//////////////////////////////////////////////////////////
// Entry Point
//////////////////////////////////////////////////////////

void main()
{
	OutputColor = texture(ColorTextureSampler, InputTextureCoords);
}