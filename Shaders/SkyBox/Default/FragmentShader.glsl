#version 460 core

//////////////////////////////////////////////////////////
// Samplers
//////////////////////////////////////////////////////////

layout(location = 0) uniform samplerCube SkyboxSampler;

//////////////////////////////////////////////////////////
// Inputs
//////////////////////////////////////////////////////////

layout(location = 0) in vec3 InputTextureCoords;

//////////////////////////////////////////////////////////
// Outputs
//////////////////////////////////////////////////////////

layout(location = 0) out vec4 OutputColor;

//////////////////////////////////////////////////////////
// Entry Point
//////////////////////////////////////////////////////////

void main()
{
	OutputColor = texture(SkyboxSampler, InputTextureCoords);
}