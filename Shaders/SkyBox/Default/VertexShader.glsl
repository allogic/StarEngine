#version 460 core

//////////////////////////////////////////////////////////
// Inputs
//////////////////////////////////////////////////////////

layout (location = 0) in vec3 InputPosition;

//////////////////////////////////////////////////////////
// Outputs
//////////////////////////////////////////////////////////

layout(location = 0) out vec3 OutputTextureCoords;

//////////////////////////////////////////////////////////
// Uniforms
//////////////////////////////////////////////////////////

uniform mat4 Projection;
uniform mat4 View;

//////////////////////////////////////////////////////////
// Entry Point
//////////////////////////////////////////////////////////

void main()
{
	OutputTextureCoords = InputPosition;

	vec4 WorldPosition = Projection * View * vec4(InputPosition, 1.0);

	gl_Position = WorldPosition.xyww;
}